# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Coffee Script
[*.coffee]
indent_style = space
indent_size = 2

# Ruby
[*.{rb, erb}]
indent_style = space
indent_size = 2

# Crystal
[*.cr]
indent_style = space
indent_size = 2

# Shellscript
[*.sh]
indent_style = tab

# YAML
[*.yml]
indent_style = space
indent_size = 2

# Markdown
[*.{md, markdown}]
trim_trailing_whitespace = false

# Perl 6
[*.{p6,pl6,pm,pm6,t}]
charset = utf-8
indent_style = space
indent_size = 2

# Makefile
[Makefile, makefile]
indent_style = tab

# package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
